{
  "buttons": [
    {
      "label": "lock",
      "action": "hyprlock",
      "text": "Lock (L)",
      "keybind": "l",
      "icon": "/usr/share/wleave/icons/lock.svg"
    },
    {
      "label": "suspend",
      "action": "systemctl suspend",
      "text": "Suspend (U)",
      "keybind": "u",
      "icon": "/usr/share/wleave/icons/suspend.svg"
    },
    {
      "label": "shutdown",
      "action": "systemctl poweroff",
      "text": "Shutdown (S)",
      "keybind": "s",
      "icon": "/usr/share/wleave/icons/shutdown.svg"
    },
    {
      "label": "logout",
      "action": "loginctl terminate-user $USER",
      "text": "Logout (E)",
      "keybind": "e",
      "icon": "/usr/share/wleave/icons/logout.svg"
    },
    {
      "label": "windows",
      "action": "systemctl hibernate",
      "text": "Windows (W)",
      "keybind": "w",
      "icon": "/home/jfifi/.config/wleave/win11.svg"
    },
    {
      "label": "reboot",
      "action": "systemctl reboot",
      "text": "Reboot (R)",
      "keybind": "r",
      "icon": "/usr/share/wleave/icons/reboot.svg"
    }
  ]
}
