    },

    "custom/ppd": {
  	"format": "{icon} {text}",
  	"interval": 1,
  	"tooltip-format": "Power profile: {text}",
  	"tooltip": true,
  	"exec": "tuned-adm active | cut -f2 -d':'",
  	"return-type":"text",
  	"format-icons": {
    		"default": "ÔÉß",
