	"custom/warp":{
        "format": "{}",// Format is handled in the script output
        "exec": "bash ~/.config/waybar/get_warp.sh",
        "on-click": "bash ~/.config/waybar/warp_toggle.sh",
        "interval": 1, // Update status every 5 seconds (optional)
        "return-type": "json",
